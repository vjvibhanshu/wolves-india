package pages;

import java.io.IOException;

import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.FindBy;
import org.openqa.selenium.support.PageFactory;

import base.Base;

public class HomePage extends Base{
	
	@FindBy(xpath="*//select[1]")
	WebElement deptcity;
	@FindBy(xpath="*//select[2]")
	WebElement destcity;
	@FindBy(xpath="/html/body/div[3]/form/div/input")
	WebElement findBtn;
	public HomePage() throws IOException {
		super();
		PageFactory.initElements(driver, this);
		
	}
	
	public String fetchTitle() {
		return driver.getTitle();
	}
	
	public void selectDeptcityText(String val)
	{
		dropDownSelect(deptcity,val);
	}
	
	public void selectDestcityText(String val)
	{
		dropDownSelect(destcity,val);
	}
	
	public void clickOnfindFlight() {
		findBtn.click();
	}
}
